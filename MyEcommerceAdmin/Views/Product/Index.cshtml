@model IEnumerable<MyEcommerceAdmin.Models.Product>
@{
    ViewBag.Title = "Product Information";
}
<style>
    .btn {
        padding: 5px 10px;
        font-size: 14px;
    }

    .btn-sm {
        padding: 3px 8px;
        font-size: 12px;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-end {
        justify-content: flex-end;
    }

    .mb-2 {
        margin-bottom: 0.5rem;
    }
</style>

<div class="row">
    <div class="col">
        <h2 class="text-info">Product List</h2>
        <hr />
        <div class="d-flex justify-content-end mb-2">
            <a href="@Url.Action("Create", "Product")" class="btn btn-outline-primary">
                Add
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-condensed table-hover table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(p => p.Name)</th>
                        <th>@Html.DisplayNameFor(p => p.UnitPrice)</th>
                        <th>@Html.DisplayNameFor(p => p.UnitInStock)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pdt in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(p => pdt.Name)</td>
                            <td>@Html.DisplayFor(p => pdt.UnitPrice)</td>
                            <td>@Html.DisplayFor(p => pdt.UnitInStock)</td>
                            <td>
                                <a href="@Url.Action("Edit", "Product", new { id = pdt.ProductID })" class="btn btn-outline-warning btn-sm">
                                    Edit
                                </a>
                                <a href="@Url.Action("Details", "Product", new { id = pdt.ProductID })" class="btn btn-outline-info btn-sm">
                                    View
                                </a>
                                <a href="@Url.Action("Delete", "Product", new { id = pdt.ProductID })" class="btn btn-outline-danger btn-sm">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
